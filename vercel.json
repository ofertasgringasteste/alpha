{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "vercel-php"
    }
  ],
  "routes": [
    {
      "src": "/api/checkout/abyssalpay-pagamento.php",
      "dest": "/api/checkout/abyssalpay-pagamento.php"
    },
    {
      "src": "/api/checkout/verificar.php",
      "dest": "/api/checkout/verificar.php"
    },
    {
      "src": "/api/abyssalpay-webhook.php",
      "dest": "/api/abyssalpay-webhook.php"
    },
    {
      "src": "/api/(.*\\.php)$",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS, PUT, DELETE"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        }
      ]
    }
  ]
}

